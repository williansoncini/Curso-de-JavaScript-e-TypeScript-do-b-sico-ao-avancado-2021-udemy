<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class='container'>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="text-center">Criar conta ou entrar</h1>
            <p class="text-center lead">Faça login ou crie sua cona abaixo</p>

            <%- include('includes/messages')  %>

            <div class="row">
                <div class="col-lg">
                    <h4>Faça seu cadastro</h4>
                    <p>Se você não tem cadastro, preencha o formulário abaixo: </p>
                    <form class='form-register' action="/login/register" method='POST'>
                        <input type="hidden" name='_csrf' value=<%= csrfToken %>>
                        <div class="mb-3">
                            <label>Seu e-mail:</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="mb-3">
                            <label>Senha:</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Criar minha conta</button>
                    </form>
                </div>
                <div class="col-lg">
                    <h4>Entrar no sistema</h4>
                    <form class='form-login' action="/login/login" method='POST'>
                        <input type="hidden" name='_csrf' value=<%= csrfToken %>>
                        <div class="mb-3">
                            <label>Seu e-mail:</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="mb-3">
                            <label>Senha:</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar </button>
                    </form>
                </div>
            </div>

        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>